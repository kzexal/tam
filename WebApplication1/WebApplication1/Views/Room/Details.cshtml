@model WebApplication1.Models.Room

@{
    ViewBag.Title = "Room Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Stylesheets -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
<link rel="stylesheet" href="~/Content/room-detail.css" />

<div class="room-container">
    <div class="room-main">
        <!-- Left: Image -->
        <div class="room-image">
            <img src="@Model.Image" alt="Room @Model.RoomNumber" />
        </div>

        <!-- Right: Room Information -->
        <div class="room-info">
            <h2>Room @Model.RoomNumber</h2>
            <div class="room-location">@(Model.RoomType?.Name)</div>

            <div class="room-description">
                Enjoy your stay in this luxurious room with modern amenities, ideal for both families and solo travelers.
            </div>

            <div class="room-features">
                <div class="feature"><i class="fas fa-bed"></i> 1 Bed</div>
                <div class="feature"><i class="fas fa-bath"></i> 1 Bathroom</div>
                <div class="feature"><i class="fas fa-tv"></i> Television</div>
                <div class="feature"><i class="fas fa-wifi"></i> Free Wifi</div>
                <div class="feature"><i class="fas fa-snowflake"></i> Air Conditioner</div>
                <div class="feature"><i class="fas fa-utensils"></i> Dining Space</div>
            </div>

            <div class="room-price">
                @(Model.RoomType?.Cost)$ <span>per day</span>
            </div>

            @if (Session["Username"] != null)
            {
                <a href="@Url.Action("BookingPage", "Booking", new { roomId = Model.RoomId })" class="book-now-btn">Book Now</a>
            }
            else
            {
                <a href="@Url.Action("Login", "Account", new { returnUrl = Request.RawUrl })" class="book-now-btn">Login to Book</a>
            }

        </div>
    </div>
</div>
