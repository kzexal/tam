<script>
function showBookingDetails(bookingId) {
    if (!bookingId || isNaN(bookingId)) {
        alert("Invalid booking ID.");
        return;
    }

    $('#bookingDetailsModal').modal('show');
    $('#guestName, #guestEmail, #guestPhone, #roomNumber, #roomType, #roomPrice, #bookingId, #bookingDate, #checkInDate, #checkOutDate, #totalDays, #totalAmount, #bookingStatus').text('Loading...');
    $('#serviceInfoList').html('<li>Loading services...</li>');

    $.ajax({
        url: '@Url.Action("GetBookingDetails", "Admin")',
        type: 'GET',
        data: { id: bookingId },
        success: function (response) {
            if (!response || response.success === false) {
                alert(response?.message || "Booking not found.");
                $('#bookingDetailsModal').modal('hide');
                return;
            }

            try {
                const guest = response.guest || {};
                $('#guestName').text(`${guest.GuestFirstName || ''} ${guest.GuestLastName || ''}`.trim() || 'N/A');
                $('#guestEmail').text(guest.GuestEmailAddress || 'N/A');
                $('#guestPhone').text(guest.GuestContactNumber || 'N/A');

                const room = response.room || {};
                $('#roomNumber').text(room.RoomNumber ? `Room ${room.RoomNumber}` : 'N/A');
                $('#roomType').text(room.RoomType?.Name || 'N/A');
                $('#roomPrice').text(room.RoomType?.Cost ? `$${room.RoomType.Cost}` : 'N/A');

                const booking = response.booking || {};
                $('#bookingId').text(booking.BookingId ? `#${booking.BookingId}` : 'N/A');

                const bookingDate = booking.BookingDate ? new Date(booking.BookingDate) : null;
                const checkIn = booking.CheckInDate ? new Date(booking.CheckInDate) : null;
                const checkOut = booking.CheckOutDate ? new Date(booking.CheckOutDate) : null;

                const dateOptions = { year: 'numeric', month: '2-digit', day: '2-digit' };
                $('#bookingDate').text(bookingDate ? bookingDate.toLocaleDateString('en-US', dateOptions) : 'N/A');
                $('#checkInDate').text(checkIn ? checkIn.toLocaleDateString('en-US', dateOptions) : 'N/A');
                $('#checkOutDate').text(checkOut ? checkOut.toLocaleDateString('en-US', dateOptions) : 'N/A');

                if (checkIn && checkOut && checkIn < checkOut) {
                    const days = Math.ceil((checkOut - checkIn) / (1000 * 60 * 60 * 24));
                    $('#totalDays').text(`${days} ${days === 1 ? 'day' : 'days'}`);
                } else {
                    $('#totalDays').text('N/A');
                }

                $('#totalAmount').text(booking.BookingAmount != null ? `$${booking.BookingAmount}` : 'N/A');

                const status = booking.Status || 'Unknown';
                const statusClass = status.toLowerCase() === 'checkin' ? 'primary' :
                                    status.toLowerCase() === 'checkout' ? 'success' : 'warning';
                $('#bookingStatus').html(`<span class="badge bg-${statusClass}">${status}</span>`);

                const canCancel = status.toLowerCase() === 'checkin';
                $('#cancelBookingBtn')
                    .prop('disabled', !canCancel)
                    .toggleClass('btn-danger', canCancel)
                    .toggleClass('btn-secondary', !canCancel)
                    .data('booking-id', booking.BookingId);

                // Service Info
                const services = response.services || [];
                const $serviceList = $('#serviceInfoList');
                $serviceList.empty();

                if (services.length > 0) {
                    services.forEach(service => {
                        const name = service.ServiceName || 'Unnamed Service';
                        const price = service.Price != null ? `$${service.Price}` : 'N/A';
                        $serviceList.append(`<li class="mb-2"><i class="bi bi-check2-circle text-warning"></i> <strong>${name}</strong>: <span class="ms-2">${price}</span></li>`);
                    });
                } else {
                    $serviceList.append('<li><i class="bi bi-info-circle text-muted"></i> No additional services used.</li>');
                }

            } catch (err) {
                console.error("Error processing booking details:", err);
                alert("Error processing booking details. Please try again.");
            }
        },
        error: function () {
            alert("Error loading booking details. Please try again.");
            $('#bookingDetailsModal').modal('hide');
        }
    });
}

$(document).ready(function () {
    $('.booking-details-btn').click(function (e) {
        e.preventDefault();
