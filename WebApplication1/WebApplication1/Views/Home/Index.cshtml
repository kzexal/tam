@model List<WebApplication1.Models.Room>
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var username = Session["Username"]?.ToString() ?? "";
}

<link rel="stylesheet" href="@Url.Content("~/Content/globals.css")" />
<link rel="stylesheet" href="@Url.Content("~/Content/style.css")" />

<main>
    <div class="home-page">
        <div class="container">
            <!-- Hero Section -->
            <section class="hero">
                <div class="content">
                    <h1 class="title">Forget Busy Work,<br />Start Next Vacation</h1>
                    <p class="subtitle">
                        We provide what you need to enjoy your <br />holiday with family. Time to make another <br />memorable moment.
                    </p>
                    <div class="stats">
                        <div class="stat">
                            <img src="https://c.animaapp.com/CYJfBrwE/img/ic-traveler--1--1@2x.png" />
                            <p><strong>2500</strong> Users</p>
                        </div>
                        <div class="stat">
                            <img src="https://c.animaapp.com/CYJfBrwE/img/ic-cities-1@2x.png" />
                            <p><strong>100</strong> Cities</p>
                        </div>
                        <div class="stat">
                            <img src="https://c.animaapp.com/CYJfBrwE/img/ic-treasure-1@2x.png" />
                            <p><strong>200</strong> Treasure</p>
                        </div>
                    </div>
                </div>
                <div class="banner">
                    <img src="https://c.animaapp.com/CYJfBrwE/img/picture.png" alt="Banner" class="banner-img" />
                </div>
            </section>

            <!-- Available Rooms Section -->
            <section class="available-rooms">
                <h2 class="section-title">List Rooms</h2>
                <div class="room-grid">
                    @foreach (var room in Model)
                    {
                        var imageUrl = string.IsNullOrEmpty(room.Image)
                            ? "https://via.placeholder.com/400x250?text=No+Image"
                            : room.Image;

                        <a href="@Url.Action("Details", "Room", new { id = room.RoomId })" class="room-card">
                            <div class="room-image" style="background-image: url('@imageUrl');"></div>
                            <div class="room-info">
                                <h3>Room @room.RoomNumber</h3>
                                <p>Type: @(room.RoomType?.Name ?? "Unknown")</p>
                                <div class="price-badge">@($"{room.RoomType?.Cost:N0}")$ <span>per day</span></div>
                            </div>
                        </a>
                    }
                </div>
            </section>

            <!-- Footer -->
            <footer id="footer" class="footer">
                <p class="logo">HMS</p>
                <p class="tagline">We kaboom your beauty holiday instantly and memorable.</p>
                <div class="contact-info">
                    <p><i class="fas fa-phone"></i> 0704160332</p>
                    <p><i class="fas fa-envelope"></i> hms@gmail.com</p>
                </div>
                <p class="copyright">© 2025 • All rights reserved</p>
            </footer>

        </div>
    </div>
</main>
